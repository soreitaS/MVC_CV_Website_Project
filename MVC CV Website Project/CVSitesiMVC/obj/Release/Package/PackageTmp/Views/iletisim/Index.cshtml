@using CVSitesiMVC.Models.Entity
@model List<TBLiletisim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var x in Model)
                                    {
                                        <div class="time-label">
                                                <span class="bg-success">
                                                    @(((DateTime)x.Tarih).ToString("dd-MMM-yyyy"))
                                                </span>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-comment bg-warning"></i>

                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i>@x.Mail</span>
                                                <h3 class="timeline-header"><a href="#">@x.AdSoyad</a><i>&nbsp; @x.Konu</i></h3>
                                                <div class="timeline-body">
                                                    @x.Mesaj
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
            </div>
        </div>
    </section>
</body>
</html>

